{
  "name": "cooltimer",
  "version": "1.0.0",
  "description": "a timer in the browser",
  "main": "index.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --require babel-core/register --colors ./src/**/*.spec.js",
    "test:watch":
      "mocha --require babel-core/register --colors -w ./src/**/*.spec.js",
    "start": "npm run build && webpack-dev-server --content-base build/",
    "clean": "rm -rf build/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffrom/cooltimer.git"
  },
  "keywords": ["timer", "browser"],
  "author": "jeff martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffrom/cooltimer/issues"
  },
  "homepage": "https://github.com/jeffrom/cooltimer#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.34",
    "@babel/preset-env": "^7.0.0-beta.34",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.7",
    "eslint": "^4.12.1",
    "eslint-loader": "^1.9.0",
    "html-webpack-plugin": "^2.30.1",
    "install": "^0.10.2",
    "mocha": "^4.0.1",
    "node-sass": "^4.7.2",
    "npm": "^5.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.5",
    "yargs": "^10.0.3"
  },
  "dependencies": {
    "mithril": "^1.1.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
